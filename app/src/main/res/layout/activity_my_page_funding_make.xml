<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MyPageFundingMake">
    <TextView
            android:text="펀딩 내용을 써주세요!"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:id="@+id/textTitle"
            android:layout_marginTop="91dp"
            android:layout_marginBottom="89dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textName" />
    <TextView
            android:text="가게이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintEnd_toStartOf="@+id/editName"
            android:layout_marginBottom="7dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp"
            app:layout_constraintBottom_toBottomOf="@+id/editName" android:layout_marginEnd="7dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editName"
            app:layout_constraintStart_toEndOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/editLocation" />
    <TextView
            android:text="위치"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLocation"
            app:layout_constraintStart_toStartOf="@+id/textGoal"
            app:layout_constraintBaseline_toBaselineOf="@+id/editLocation" android:layout_marginStart="1dp" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editLocation"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toEndOf="@+id/editGoal" app:layout_constraintBottom_toTopOf="@+id/editGoal" />
    <TextView
            android:text="목표 금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGoal"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editGoal" app:layout_constraintTop_toTopOf="@+id/editGoal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" android:layout_marginEnd="6dp" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editGoal"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="296dp"
            app:layout_constraintStart_toEndOf="@+id/textGoal" app:layout_constraintEnd_toEndOf="parent" />
    <TextView
            android:text="설명"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textExplain"
            app:layout_constraintStart_toStartOf="@+id/editExplain"
            android:layout_marginStart="8dp" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/editExplain" />
    <EditText
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editExplain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/textLocation"
            android:layout_marginTop="164dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="165dp" />
    <TextView
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textSending" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/editExplain" />
</android.support.constraint.ConstraintLayout>