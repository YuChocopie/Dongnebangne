<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_hash_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/circle_outline_10"
        android:backgroundTint="@color/MainOrange"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text="음식"
        android:textColor="@color/black3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hash_tag_2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_outline_10"
        android:backgroundTint="@color/MainOrange"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text="음식"
        android:textColor="@color/black3"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_hash_tag_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tv_hash_tag_3"
        android:layout_height="24dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_outline_10"
        android:backgroundTint="@color/MainOrange"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text="음식"
        android:textColor="@color/black3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_hash_tag_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hash_tag_4"
        android:layout_height="24dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_outline_10"
        android:backgroundTint="@color/MainOrange"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text="음식"
        android:textColor="@color/black3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_hash_tag_3"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>