<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_hash_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/circle_outline_10"
            android:backgroundTint="@color/MainOrange"
            android:text="음식"
            android:textSize="16sp"
            android:textColor="@color/black3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:id="@+id/tv_hash_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/circle_outline_10"
            android:backgroundTint="@color/MainOrange"
            android:text="음식"
            android:textSize="16sp"
            android:textColor="@color/black3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_hash_tag_1"
    />
    <TextView
            android:layout_marginStart="15dp"

            android:id="@+id/tv_hash_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/circle_outline_10"
            android:backgroundTint="@color/MainOrange"
            android:text="음식"
            android:textSize="16sp"
            android:textColor="@color/black3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_hash_tag_2"
    />
    <TextView
            android:id="@+id/tv_hash_tag_4"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/circle_outline_10"
            android:backgroundTint="@color/MainOrange"
            android:text="음식"
            android:textSize="16sp"
            android:textColor="@color/black3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_hash_tag_3"
    />
</android.support.constraint.ConstraintLayout>